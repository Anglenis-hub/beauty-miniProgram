.main {
  width: 100%;
  height: 100vh;
  background-color: rgb(165, 165, 165, 0.2);
}
.order-box {
  position: absolute;
  top: 40rpx;
  left: 50%;
  transform: translate(-50%, 0%);
  width: 90vw;
  height: 57vh;
  margin: 0rpx auto;
  border-radius: 30rpx;
  background-color: #fff;
}
.order-img {
  width: 40vw;
  margin: 0 30rpx 20rpx 0;
  border-radius: 25rpx;
}
.order-info {
  display: flex;
  flex-direction: row;
  margin: 30rpx 30rpx 0rpx 30rpx;
}
.details {
  width: 50vw;
  display: flex;
  flex-direction: column;
}
.detail {
  font-size: 27rpx;
  line-height: 50rpx;
}
.title {
  font-size: large;
  margin-bottom: 20rpx;
}
.line {
  width: 82vw;
  height: 1rpx;
  margin: 25rpx auto;
  border: 0rpx solid rgb(155, 155, 155, 0.4);
  background-color: rgb(155, 155, 155, 0.4);
}
.order-time {
  width: 82vw;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.order-icon {
  width: 40rpx;
}
.phone-number {
  width: 28vw;
}
.order-btn {
  position: absolute;
  top: 90%;
  width: 90vw;
  left: 50%;
  transform: translate(-50%, 0%);
  background-color: rgb(219, 139, 159);
  color: white;
}