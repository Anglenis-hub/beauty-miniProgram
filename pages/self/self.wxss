/* pages/self/self.wxss */
.main {
  width: 100%;
  height: 100vh;
  background-color: rgb(165, 165, 165, 0.2);
}
.head {
  height: 250rpx;
  background-color: rgb(219, 139, 159, 0.8);
  margin-bottom: 30rpx;
}
.login-btn {
  position: relative;
  top: 50%;
}
.user {
  position: relative;
  top: 30%;
  left: 6%;
  display: flex;
  flex-direction: row;
}
.avatar-image {
  width: 150rpx;
  height: 150rpx;
  border: 1rpx solid #fff;
  border-radius: 100%;  
}
.user-name {
  margin-left: 30rpx;
  line-height: 150rpx;
  font-size: 40rpx;
}
.my-things {
  display: flex;
  flex-direction: column;
}
.my-thing {
  display: flex;
  justify-content: space-between;
  width: 88vw;
  height: 110rpx;
  line-height: 110rpx;
  padding: 0 25rpx;
  margin: 0rpx auto 15rpx;
  border-radius: 15rpx;
  background-color: #fff;
}