.tabs-box {
  width: 90vw;
  margin: 40rpx auto;
  display: flex;
  flex-direction: row;
}
.tab {
  border: 2rpx solid white;
  background-color: rgb(114, 114, 114, 0.2);
  width: 33vw;
  height: 65rpx;
}
.first-radius {
  border-radius: 15rpx 0 0 15rpx;
  border-right: none;
}
.end-radius {
  border-radius: 0 15rpx 15rpx 0;
  border-left: none;
}
.font {
  text-align: center;
  line-height: 65rpx;
}
.clicked-tab {
  /* height: 65rpx; */
  border: 3rpx solid rgb(219, 139, 159);
  background-color: rgb(219, 139, 159);
  /* background-color: rgb(68, 68, 68); */
  color: white;
}
.collect-num {
  width: 90vw;
  background-color: rgb(114, 114, 114, 0.2);
  border-radius: 10rpx;
  margin: 25rpx auto;
  padding: 10rpx 0rpx 10rpx 20rpx;
  line-height: 40rpx;
}
.recommanded {
  margin: 0vmax 2vmax;
}
.recommanded-text {
  font-size: 35rpx;
}
.image-box {
  display: block;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.img {
  width: 46vw;
  margin-bottom: 15rpx;
}

page {
  height: 2000rpx;
}
.inner {
  width: 160rpx;
  height: 160rpx;
  line-height: 160rpx;
  border-radius: 50%;
  background-color: rgb(45, 150, 233);
  text-align: center;
  font-weight: bold;
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
}