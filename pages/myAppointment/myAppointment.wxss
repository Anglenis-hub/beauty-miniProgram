.order-box {
  position: relative;
  width: 90vw;
  height: 560rpx;
  margin: 20rpx auto;
  border-radius: 30rpx;
  background-color: #fff;
}
.order-img {
  width: 30vw;
  margin: 0 30rpx 20rpx 0;
  border-radius: 25rpx;
}
.order-info {
  display: flex;
  flex-direction: row;
  margin: 30rpx 30rpx 0rpx 0rpx;
}
.details {
  width: 50vw;
  display: flex;
  flex-direction: column;
}
.detail {
  font-size: 27rpx;
  line-height: 50rpx;
}
.title {
  font-size: large;
  margin-bottom: 20rpx;
}
.line {
  width: 82vw;
  height: 1rpx;
  margin: 25rpx auto;
  border: 0rpx solid rgb(155, 155, 155, 0.4);
  background-color: rgb(155, 155, 155, 0.4);
}
.order-time {
  width: 82vw;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.order-icon {
  width: 40rpx;
}
.phone-number {
  width: 28vw;
}
.order-btn {
  position: absolute;
  top: 90%;
  width: 90vw;
  left: 50%;
  transform: translate(-50%, 0%);
  background-color: rgb(219, 139, 159);
  color: white;
}
.absoulute{
  position: absolute;
  width: 82vw;
  padding: 30rpx;

}
.shop-name {
  color: rgb(94, 94, 94);
}
.btns {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.btns .btn {
  border-radius: 30rpx;
  border: 1px solid gray;
  width: 25vw;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-left: 20rpx;
}