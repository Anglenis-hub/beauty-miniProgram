page {
  height: 1000rpx;
}
.inner {
  width: 100rpx;
  height: 100rpx;
  border: 1rpx solid rgba(114, 114, 114, 0.2);
  border-radius: 50%;
  background-color: rgba(204, 204, 204, 0.1);
  position: fixed;
  right: 40rpx;
  bottom: 9%;
}
.top-icon {
  width: 50rpx;
  position: absolute;
  top: 12%;
  right: 50%;
  transform: translate(50%, 0%);
  /* opacity: 0.6; */
}
.top-text {
  position: absolute;
  top: 60%;
  right: 50%;
  transform: translate(50%, 0%);
  font-size: 22rpx;
}